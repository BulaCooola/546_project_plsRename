<main class="my-line">
    <link rel="stylesheet" href="../../public/css/tree.css" />
    <h1>{{user.line}}</h1>
    <div id="tree">
        <ul>
            <li>
                {{#if grandbig}}
                {{!-- Grandbig --}}
                <a>{{grandbig.firstName}} {{grandbig.lastName}}</a>
                {{else}}
                <a>No Grandbig found</a>
                {{/if}}
                <ul>
                    <li>
                        {{#if big}}
                        {{!-- Big --}}
                        <a>{{big.firstName}} {{big.lastName}}</a>
                        {{else}}
                        <a>No Big found</a>
                        {{/if}}
                        {{#if big.littles.length}}
                        <ul>
                            {{#each big.littles}}
                            <li>
                                {{!-- Siblings --}}
                                <a>{{this.firstName}} {{this.lastName}}</a> 
                                {{#if this.littles.length}}
                                <ul>
                                    {{#each this.littles}}
                                    <li>
                                        {{!-- Littles --}}
                                        <a>{{this.firstName}} {{this.lastName}}</a>
                                        {{#if this.littles.length}}
                                        <ul>
                                            {{#each this.littles}}
                                            <li>
                                                {{!-- Grandlittles --}}
                                                <a>{{this.firstName}} {{this.lastName}}</a>
                                            </li>
                                            {{/each}}
                                        </ul>
                                        {{/if}}
                                    </li>
                                    {{/each}}
                                </ul>
                                {{/if}}
                            </li>
                            {{/each}}
                        </ul>
                        {{else}}
                        <ul>
                            <li>
                                <a>{{user.firstName}} {{user.lastName}}</a>
                                {{#if user.littles.length}}
                                <ul>
                                    {{#each user.littles}}
                                    <li>
                                        <a>{{this.firstName}} {{this.lastName}}</a>
                                    </li>
                                    {{/each}}
                                </ul>
                                {{/if}}
                            </li>
                        </ul>
                        {{/if}}
                </ul>
            </li>
        </ul>
    </div>
</main>

