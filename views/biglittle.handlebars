<main class="register">
    <div class="form-wrapper">
        <h2 class="h2-register">Add Bigs or Littles</h2>
        <form action="/lines/myline/biglittle" method="POST" id="biglittle-form">
            <div class="input-container">
                <div class="input-group">
                    <label for="memberInput">Member:</label>
                    <select id="memberInput" name="member">
                        <option disabled selected value> -- select an option -- </option>
                        {{#each line.members}}
                        <option value="{{this.email}}">{{this.firstName}} {{this.lastName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="input-group">
                    <label for="typeInput">Relation to you:</label>
                    <select id="typeInput" name="type">
                        <option disabled selected value> -- select an option -- </option>
                        <option value="big">Big</option>
                        <option value="little">Little</option>
                    </select>
                </div>
            </div>
            <button type="submit" id="submitButton" onclick="disableButton()">Sign Up</button>
    </div>
    </form>
    </div>
</main>