<script src="../../public/js/registration.js"></script>
<main class="register">
    <div class="form-wrapper">
        <h2 class="h2-register">Register</h2>
        <form action="/users/register" method="POST" id="registration-form">
            <div class="input-container">
                <div class="input-group">
                    <label for="firstNameInput">First Name:</label>
                    <input type="text" id="firstNameInput" name="firstName" required>
                </div>

                <div class="input-group">
                    <label for="lastNameInput">Last Name:</label>
                    <input type="text" id="lastNameInput" name="lastName" required>
                </div>

                <div class="input-group">
                    <label for="userNameInput">User Name:</label>
                    <input type="text" id="userNameInput" name="userName" required>
                </div>

                <div class="input-group">
                    <label for="emailInput">Email Address:</label>
                    <input type="email" id="emailInput" name="email" required>
                </div>

                <div class="input-group">
                    <label for="passwordInput">Password:</label>
                    <input type="password" id="passwordInput" name="password" required>
                </div>

                <div class="input-group">
                    <label for="confirmPasswordInput">Confirm Password:</label>
                    <input type="password" id="confirmPasswordInput" name="confirmPassword" required>
                </div>

                <div class="input-group">
                    <label for="lineInput">Line:</label>
                    <select id="lineInput" name="line">
                        <option disabled selected value> -- select an option -- </option>
                        {{#each lines}}
                        <option value="{{this.lineName}}">{{this.lineName}} Line</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <ul>
                {{#each errors}}
                <li>{{this}}</li>
                {{/each}}
            </ul>

            <button type="submit" id="submitButton" onclick="disableButton()">Sign Up</button>
            <div id="loadingIndicator">
                <div class="loader"></div>
                <p>Loading...</p>
            </div>

        </form>
        <script src="../public/js/button.js">validateForm('registration-form')</script>

    </div>
    <hr class="separator-line">
    <p><a href="/users/login">Already have an account? Click here to log-in</a></p>
</main>