<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<main class="all-lines">
    <h1>All Lines</h1>
    <ul>
        {{#each data}}
        <li>{{this.lineName}} Line</li>
        {{/each}}
    </ul>
    <h2>Or, search for a member of FAST:</h2>
    <form method="POST" action="/searchMember">
        <div>
            <label for="searchType">Search by:</label>
            <select id="searchType" name="searchType">
                <option disabled selected value> -- select an option -- </option>
                <option value="name">Name</option>
                <option value="class">Graduating Class</option>
                <option value="major">Major</option>
            </select>
        </div>
        <div>
            <label for="searchMember">Value: </label>
            <input type="text" name="searchMember" id="searchMember" />
        </div>
        <input type="submit" value="Search" />
    </form>
</main>

<script>
    $(document).ready(function () {
        // Listen for form submission
        $('form').submit(function (event) {
            event.preventDefault(); // Prevent the default form submission

            // Get the form data
            const formData = {
                searchType: $('#searchType').val(),
                searchMember: $('#searchMember').val()
            };

            // Make an AJAX request
            $.ajax({
                type: 'POST',
                url: '/searchMember', // Replace with your server endpoint
                data: formData,
                success: function (response) {
                    // Handle the response here
                    console.log(response);
                    // Update your HTML to display search results
                },
                error: function (error) {
                    console.error('Error:', error);
                }
            });
        });
    });
</script>
