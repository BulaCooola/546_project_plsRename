<link rel="stylesheet" href="../../public/css/profile.css" />
<main class="edit-profile">
    <form action="/users/profile/edit" method="POST">
        {{!-- <!-- Image Upload -->
        <label for="profileImage">Profile Image URL:</label>
        <input type="text" id="profileImage" name="profileImage" value="{{user.profileImage}}"> --}}
        
        <!-- Name -->
        <label for="firstNameInput">First Name:</label>
        <input type="text" id="firstNameInput" name="firstName" value="{{user.firstName}}"> 

        <label for="lastNameInput">Last Name:</label>
        <input type="text" id="lastNameInput" name="lastName" value="{{user.lastName}}">

        <!-- Username -->
        <label for="userNameInput">Username:</label>
        <input type="text" id="userNameInput" name="userName" value="{{user.userName}}">

        <!-- Major and Grad Year -->
        <label for="majorInput">Major:</label>
        <input type="text" id="majorInput" name="major" value="{{user.major}}">

        <label for="gradYearInput">Graduation Year:</label>
        <input type="text" id="gradYearInput" name="gradYear" value="{{user.gradYear}}">

        <!-- Line -->
        <label for="lineInput">Line:</label>
        <select id="lineInput" name="line">
            <option value=""> -- select an option -- </option>
            <option value="PPP">Pretty Pretty Princesses</option>
            <option value="MILF">Mya's Infinite Line Friends</option>
            <option value="Dankest">Dankest Line</option>
            <option value="Grand">Grand Line</option>
        </select>

        <!-- Big and Littles -->
        <label for="bigInput">Big:</label>
        <input type="text" id="bigInput" name="big" value="{{user.big}}">

        <label for="littles">Littles:</label>
        <ul>
            {{#each user.little}}
                <li>{{this.firstName}} {{this.lastName}}</li>
            {{/each}}
        </ul>

        <!-- Bio -->
        <label for="bioInput">Bio:</label>
        <textarea id="bioInput" name="bio" rows="4">{{user.bio}}</textarea>

        <!-- Edit Profile Button -->
        <label for="email">*Confirm (current) Email:</label>
        <input type="email" id="email" name="email" required>
        <label for="password">*Password: </label>
        <input type="password" id="password" name="password" required>
        <button type="submit">Save Changes</button>
    </form>
</main>