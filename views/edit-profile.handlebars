<link rel="stylesheet" href="../../public/css/profile.css" />

<main class="edit-profile">

    <div class="main-content" id="mainContent">
        {{#if error}}
        <p class="error">{{error}}</p>
        {{/if}}

        <p><a href="/users/profile">Go Back!</a></p>

        <form action="/users/profile/edit" method="POST" id="myForm" onsubmit="validateForm('myForm')">
            {{!-- <!-- Image Upload -->
            <label for="profileImage">Profile Image URL:</label>
            <input type="text" id="profileImage" name="profileImage" value="{{user.profileImage}}"> --}}
            <!-- Name -->
            <label for="firstNameInput">First Name:</label>
            <input type="text" id="firstNameInput" name="firstName" value="{{user.firstName}}" required>

            <label for="lastNameInput">Last Name:</label>
            <input type="text" id="lastNameInput" name="lastName" value="{{user.lastName}}" required>

            <!-- Username -->
            <label for="userNameInput">Username:</label>
            <input type="text" id="userNameInput" name="userName" value="{{user.userName}}" required>

            <!-- Major and Grad Year -->
            <label for="majorInput">Major:</label>
            <input type="text" id="majorInput" name="major" value="{{user.major}}">

            <label for="gradYearInput">Graduation Year:</label>
            <input type="number" id="gradYearInput" name="gradYear" value="{{user.gradYear}}">

            <!-- Line -->
            {{!-- <label for="lineInput">Line:</label>
            <select id="lineInput" name="line">
                <option value=""> -- select an option -- </option>
                <option value="PPP">Pretty Pretty Princesses</option>
                <option value="MILF">Mya's Infinite Line Friends</option>
                <option value="Dankest">Dankest Line</option>
                <option value="Grand">Grand Line</option>
            </select> --}}

            {{!-- <!-- Big and Littles -->
            <label for="bigInput">Big:</label>
            <input type="text" id="bigInput" name="big" value="{{user.big}}">

            <label for="littles">Littles:</label>
            <ul>
                {{#each user.little}}
                <li>{{this.firstName}} {{this.lastName}}</li>
                {{/each}}
            </ul> --}}

            <!-- Bio -->
            <label for="bioInput">Bio:</label>
            <input type="text" id="bioInput" name="bio" rows="4" value="{{user.userBio}}">

            <hr class="separator-line">

            <!-- Edit Profile Button -->
            <label for="email">*Confirm (current) Email:</label>
            <input type="email" id="email" name="email" required>
            <label for="password">*Password: </label>
            <input type="password" id="password" name="password" required>

            <button type="submit" id="submitButton" onclick="disableButton()">Save Changes</button>
            <div id="loadingIndicator">
                <div class="loader"></div>
                <p>Loading...</p>
            </div>

        </form>
        <script src="../../public/js/button.js"></script>
        <script src="../../public/js/edit-profile.js">validateForm('myForm')</script>

        <p><a href="/users/profile">Go Back!</a></p>
    </div>


</main>