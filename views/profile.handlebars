<link rel="stylesheet" href="../../public/css/profile.css" />
{{#if user.profilePicture}}
<img src={{user.profilePicture}} style="width:200px; height: 200px;border-radius: 50%;">
{{else}}
<img src="../../public/images/no_profile_image.png">
{{/if}}


<main class="profile">
    <h1>{{user.firstName}} {{user.lastName}}</h1>

    <h2>Username:</h2>
    <p> {{user.userName}} </p>

    <h3>Line:</h3>
    <p>{{user.line}}</p>

    {{#if user.userBio}}
    <h3>Bio:</h3>
    <p>{{user.userBio}}</p>
    {{/if}}

    {{#if user.major}}
    <h3>Major:</h3>
    <p>{{user.major}}</p>
    {{/if}}

    {{#if user.gradYear}}
    <h3>Class of</h3>
    <p>{{user.gradYear}}</p>
    {{/if}}


    {{#if big}}
    <h4>Big:</h4>
    <p>{{big.firstName}} {{big.lastName}}</p>
    {{/if}}

    {{#if user.littles.length}}
    <h4>Littles:</h4>
    <ul>
        {{#each user.littles}}
        <li>{{this.firstName}} {{this.lastName}}</li>
        {{/each}}
    </ul>
    {{/if}}

    {{#if socials}}
    <h4>Socials:</h4>
    {{/if}}

    <ul>
    {{#if user.links.facebook}}
        <li>
            <a href="{{user.links.facebook}}">Facebook</a>
        </li>
    {{/if}}

    {{#if user.links.instagram}}
        <li>
            <a href="{{user.links.instagram}}">Instagram</a>
        </li>
    {{/if}}
    </ul>

    {{#if user.links.spotify}}
        <iframe style="border-radius:12px" src="https://open.spotify.com/embed/{{type}}/{{id}}?utm_source=generator" width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    {{/if}}

    {{!-- some logic here that is basically like
    if usersession.little.contains(user.userName) then they're ur big
    if user.little.contains(usersession.userName) they're ur little
    --}}
    {{!--
    <script src="../public/js/main.js"></script> --}}

    {{#if me}}
    <hr class="separator-line">

    <div class="user-nav-wrapper">
        <p><a href="/users/edit-profile">Edit Profile</a></p>
        <p><a href="/lines/myline/biglittle">Add Littles</a></p>
        <p><a href="/users/logout">Log out</a></p>
    </div>
    {{/if}}
</main>